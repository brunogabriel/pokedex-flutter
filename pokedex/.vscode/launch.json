  "version": "0.2.0",
  "configurations": [
    {
      "name": "pokedex (debug mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/app/main.dart",
      "toolArgs": [
        "--enable-experiment=macros"
      ]
    },
    {
      "name": "pokedex (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "program": "lib/app/main.dart",
      "toolArgs": [
        "--enable-experiment=macros"
      ]
    },
    {
      "name": "pokedex (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "program": "lib/app/main.dart",
      "toolArgs": [
        "--enable-experiment=macros"
      ]
    }
  ]
}